{
  "name": "ultima-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "deploy": "npm run components:build && npm run monaco-editor:build && ng build --configuration production --base-href 'https://ultima-ui.github.io/components/' && npx angular-cli-ghpages --dir=dist/ultima-ui/browser",
    "components:dev": "ng build components --watch --configuration development",
    "components:build": "ng build components --configuration production",
    "components:publish": "ng build components --configuration production && npm publish --access public ./dist/components",
    "monaco-editor:dev": "ng build monaco-editor --watch --configuration development",
    "monaco-editor:build": "ng build monaco-editor --configuration production",
    "monaco-editor:publish": "ng build monaco-editor --configuration production && npm publish --access public ./dist/monaco-editor"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^17.0.1",
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2",
    "@fontsource/golos-text": "^5.0.8",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.9",
    "express": "^4.18.2",
    "highlight.js": "^11.9.0",
    "iconify-icon": "^1.0.8",
    "konva": "^9.2.3",
    "monaco-editor": "^0.44.0",
    "ngx-highlightjs": "^10.0.0",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.0.0",
    "typescript": "~5.2.2",
    "angular-cli-ghpages": "^1.0.7",
    "autoprefixer": "^10.4.14",
    "gh-pages": "^6.0.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0"
  }
}
